# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2

# 4 space indentation
[*.{erl,src,hrl,escript}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
